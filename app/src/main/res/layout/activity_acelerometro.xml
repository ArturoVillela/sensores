<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.basicos.charlie.sensores.Acelerometro">

    <TextView
        android:text="@string/ts_Acelerometro"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:text="@string/ds_Acelerometro"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rg_variaciones_acelerometro"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variacion en eje X"
            android:checked="true" />
        <RadioButton
            android:id="@+id/radioY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variacion en eje Y"
            android:checked="false" />
        <RadioButton
            android:id="@+id/radioZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variacion en eje Z"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_sa_resultado"
        android:text="Variacion:"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"/>

</LinearLayout>
